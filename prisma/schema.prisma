datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  USER
  GYM_OWNER
  GYM_EMPLOYEE
  MEMBER
}

model User {
  id           String    @id @default(uuid())
  email        String    @unique
  password     String
  name         String
  role         Role      @default(USER)
  googleId     String?   @unique
  refreshToken String?
  bookings     Booking[]
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model WorkoutSession {
  id             String                @id @default(uuid())
  name           String
  availabilities SessionAvailability[]
  createdAt      DateTime              @default(now())
  updatedAt      DateTime              @updatedAt
}

model SessionAvailability {
  id               String         @id @default(uuid())
  startTime        DateTime
  endTime          DateTime
  workoutSession   WorkoutSession @relation(fields: [workoutSessionId], references: [id])
  workoutSessionId String
  booking          Booking?
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
}

model Booking {
  id               String              @id @default(uuid())
  user             User                @relation(fields: [userId], references: [id])
  userId           String
  availability     SessionAvailability @relation(fields: [availabilityId], references: [id])
  availabilityId   String              @unique
  createdAt        DateTime            @default(now())
  updatedAt        DateTime            @updatedAt
}
