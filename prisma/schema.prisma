datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  OWNER
  EMPLOYEE
  MEMBER
}

model User {
  id           String       @id @default(uuid())
  name         String
  phoneNumber  String       @unique
  auth         Auth?
  bookings     Booking[]
  memberships  Membership[]
  businesses   Business[]
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
}

model Auth {
  id           String   @id @default(uuid())
  email        String   @unique
  password     String
  googleId     String?  @unique
  refreshToken String?
  user         User     @relation(fields: [userId], references: [id])
  userId       String   @unique
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Business {
  id          String       @id @default(uuid())
  name        String
  houseNumber String
  street      String
  city        String
  state       String
  zipCode     String
  phoneNumber String
  mapUrl      String?
  latitude    Float?
  longitude   Float?
  owner       User         @relation(fields: [ownerId], references: [id])
  ownerId     String
  memberships Membership[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model Membership {
  id         String   @id @default(uuid())
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  business   Business @relation(fields: [businessId], references: [id])
  businessId String
  role       Role
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([userId, businessId])
}

model WorkoutSession {
  id             String                @id @default(uuid())
  name           String
  availabilities SessionAvailability[]
  createdAt      DateTime              @default(now())
  updatedAt      DateTime              @updatedAt
}

model SessionAvailability {
  id               String         @id @default(uuid())
  startTime        DateTime
  endTime          DateTime
  workoutSession   WorkoutSession @relation(fields: [workoutSessionId], references: [id])
  workoutSessionId String
  booking          Booking?
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
}

model Booking {
  id               String              @id @default(uuid())
  user             User                @relation(fields: [userId], references: [id])
  userId           String
  availability     SessionAvailability @relation(fields: [availabilityId], references: [id])
  availabilityId   String              @unique
  createdAt        DateTime            @default(now())
  updatedAt        DateTime            @updatedAt
}
